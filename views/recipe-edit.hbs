{{#if user}}
    <h2>Edit {{recipe.name}}</h2>

    <form action="/recipes/{{recipe.id}}/edit" method="POST" enctype="multipart/form-data" >
    <label>Title of Dish</label>
    <input type="text" name="name" value="{{recipe.name}}" />

    <label>Cusine</label>
    <input type="text" name="cuisine" value="{{recipe.cuisine}}"/>

    <label>Prep Time</label>
    <input type="text" name="prepTime" value="{{recipe.prepTime}}" />

    <label> Cook time</label>
    <input type="text" name="cookTime" value="{{recipe.cookTime}}" />

    <label>Serves</label>
    <input type="number" name="serves" value="{{recipe.serves}}"/>

    <label>Ingredients (Please seperate each ingredient with a comma) </label>
    <textarea name="ingredients" rows="8" cols="12" >{{recipe.ingredients}}</textarea>

    <label>Instructions (Please seperate each instruction with a full stop)</label>
    <textarea name="method" rows="8" cols="12" >{{recipe.method}}</textarea>


    <label>Suitable for:</label>
        <label>Vegetarian</label>
        <input type="checkbox" name="suitable" value="Vegetarian">
        <label>Vegan</label>
        <input type="checkbox" name="suitable" value="Vegan">
        <label>Lactose Free</label>
        <input type="checkbox" name="suitable" value="Lactose Free">
        <label>Gluten Free</label>
        <input type="checkbox" name="suitable" value="Gluten Free">



    <label>Allergy Information:</label>
        <label>Nuts</label>
        <input type="checkbox" name="allergy" value="Nuts">
        <label>Seafood</label>
        <input type="checkbox" name="allergy" value="Seafood">

    <label>Image</label>
    <input type="file" name="image"/>

    <button type="submit">Finshed editing!</button>  

    </form>
{{/if}}
<a href="/">Home</a>