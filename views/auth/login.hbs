<link rel="stylesheet" href="/stylesheets/auth.css">

<div class="container">
    <div class="auth-box">
      <form action="/login" method="POST">
        <div class="mb-3">
          <label class="form-label auth">Login</label>
          <input type="text" class="form-control user-input-box" name="username" placeholder="Username">
        </div>
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="text" class="form-control user-input-box" name="password" placeholder="Password">
        </div>
        <div class="mb-3">
        <button type="submit" class="btn btn-warning">Login</button>
        <p>Don't have an account? Register <a href="/signup">here</a></p>
        </div>
      </form>

    {{#if errorMessage}}
        <p>{{errorMessage}}</p>
    {{/if}}
    </div>
</div>