<link rel="stylesheet" href="/stylesheets/recipes.css">

<h2>List of recipes</h2>
<hr>

<div class="container">
  <div class="row">
    {{#each recipesFromDB}}
      <div class="col-md-6 p-3">
        
        <h3>  <a href="/recipes/{{id}}">{{name}}</a>  </h3>
        
        <img src={{pictureUrl}} class="img-thumbnail" alt="food-image" />
        <br>
        
        {{#if ../user}}
          <div class="col-md-6 buttons">
            <button class="btn btn-success"><a href="/recipes/{{id}}/edit">Edit</a></button>
              
            <form action="/recipes/{{id}}/delete" method="POST">
              <button class="btn btn-success" type="submit">Delete</button>
            </form>

            <form action="/recipes/{{id}}/favourite" method="POST">
              <button class="btn btn-success">Add to Favourites</button>
            </form>
            
          </div>
        {{/if}}

      </div>
    {{/each}}
  </div>
</div>



